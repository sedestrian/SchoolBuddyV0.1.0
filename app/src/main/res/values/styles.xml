<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>
    <style name="Pop" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000</item>
    </style>
    <style name="ShadowTest" parent="Theme.AppCompat.Light">
        <item name="elevation">2dp</item>
    </style>
    <style name="label_mystyle_light">
        <item name="android:background">@drawable/my_label_background</item>
        <item name="android:textColor">#595959</item>
    </style>
</resources>