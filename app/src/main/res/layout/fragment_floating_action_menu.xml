<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.tr4android.support.extension.widget.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:fabMenuCloseIconAngle="405"
        app:fabMenuExpandDirection="down"
        app:fabMenuLabelPosition="left"
        android:layout_margin="16dp"
        android:id="@+id/menu"
        >

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24px"
            android:layout_margin="8dp"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mark"
            android:src="@drawable/ic_add_white_24px"
            app:backgroundTint="#50a9ff"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mark"
            android:src="@drawable/ic_add_white_24px"
            app:backgroundTint="#50a9ff"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mark"
            android:src="@drawable/ic_add_white_24px"
            app:backgroundTint="#50a9ff"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mark"
            android:src="@drawable/ic_add_white_24px"
            app:backgroundTint="#50a9ff"
            app:fabSize="mini" />

    </com.tr4android.support.extension.widget.FloatingActionMenu>

</RelativeLayout>
