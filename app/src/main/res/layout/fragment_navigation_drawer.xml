<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FFFFFF"
    tools:context="com.technext.fabtest2.NavigationDrawerFragment">
    <include layout="@layout/header" android:id="@+id/drawer_header" android:layout_width="match_parent" android:layout_height="178dp" android:layout_marginBottom="5dp"></include>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityPicker"
        android:layout_below="@id/drawer_header"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
